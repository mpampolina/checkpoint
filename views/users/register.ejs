<link rel="stylesheet" href="stylesheets/login-register.css">

<section id="form-card--container" class="container">
  <h1>Create an account</h1>
  <div class="form-card">
    <form class="form flexV" action="">
      <label for="name">Name</label>
      <input name="name" class="input" type="text">
      <label for="email">Email</label>
      <input name="email" class="input" type="text">
      <label for="password">Password</label>
      <input name="password" class="input" type="text">
      <label for="confirm-password">Confirm Password</label>
      <input name="confirm-password" class="input" type="text">
      <p class="login-register-switch--text">Have an account? - <a class="login-register-switch--link" href="/users/login">Login</a></p>
      <div class="btn-control">
        <input class="form-btn"type="submit" value="Register">
      </div>
    </form>
  </div>
</section>